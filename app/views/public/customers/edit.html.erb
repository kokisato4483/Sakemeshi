<div class="container-fluid registration py-5">
  
  <div class="row">
    <div class="offset-2">
      <h2 class="red-border px-3 table-secondary">会員情報編集</h2>
    </div>
  </div>

  <div class="row">
    <%= form_with model: @customer, url: public_customers_infomation_path, method: :patch do |f| %>
      <table class="table table-borderless">
        <tr>
          <td>プロフィール画像</td>
          <td><%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td><%= f.text_field :name, autocomplete: "name" %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email, size: "40*40", autocomplete: "email" %></td>
        </tr>
        <tr>
        <td><%= f.submit '編集内容を保存', class: "btn btn-success" %></td>
        </tr>
      </table>
    <% end %>
  </div>

  <div class="col-xs-10 mt-3">
    <%= link_to '退会する', public_customers_infomation_quit_path, class: "btn btn-danger mt-2"%>
  </div>
  
</div>
