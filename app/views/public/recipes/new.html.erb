<div class="container">
  <h1>投稿フォーム</h1>
  <%= form_with model: @recipe, url: public_recipes_path, method: :post do |f| %>
  
    <div class="row">
      <div class="col-lg-5">
        <h4>レシピ画像</h4>
        <%= f.file_field :image, accept: "image/*", multiple: true %>
        <h4>レシピ名</h4>
        <textarea class="form-control" rows="3"  id="name" ></textarea>
      </div>
      
      <div class="col-lg-7">
        <h4>カテゴリ</h4>
        <%= f.collection_select :genre_id, Genre.all, :id, :category, class: "form-control col-sm-8" %>
        <h4>概要</h4>
        <textarea class="form-control" rows="5"  id="description" ></textarea>
      </div>
    </div>
    
    <div class="row">
      <div class="form-group col-lg-8">
        <h4>材料</h4>
        <textarea class="form-control" rows="5"><%= @forms.content %></textarea>
      </div>
      <div class="form-group col-lg-4">
        <h4>お酒</h4>
        <textarea class="form-control" id="drink" ></textarea>
        <h4>説明</h4>
        <textarea class="form-control" id="drink_point" ></textarea>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-lg-12">
        <h4>作り方</h4>
        <textarea class="form-control" rows="5"  id="point" ></textarea>
      </div>
    </div>
    <div class= "row">
      <div class="form-group col-lg-12">
      <%= f.submit '投稿', class: "btn btn-outline-dark btn-sm　" %>
      </div>
    </div>
  <% end %>
</div>