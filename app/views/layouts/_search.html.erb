<div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :word %>
      <%= f.select :range, options_for_select([['レシピ名'], ['ユーザー']]) %>
      <%= f.select :search, options_for_select([["キーワード","partial_match"],["完全一致","perfect_match"]]) %>
      <%= f.submit "検索", class: "btn btn-primary btn-light btn-outline-secondary" %>
  <% end %>
</div>