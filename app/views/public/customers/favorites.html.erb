<div class="offset-2">
  <div class="row mt-4">
    <mark class="h4 table-secondary"><%= @customer.name %>さんのお気に入りレシピ一覧</mark>
  </div>

  
  <div class="row">
    <table class="table table-light table-bordered">
      <thead class="thead-light"></thead>
        <tr>
          <th></th>
          <th>投稿者</th>
          <th>レシピ名</th>
          <th>ジャンル</th>
          <th>いいね</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @favorites.each do |recipe| %>
          <tr>
            <th><%= image_tag recipe.get_image, size: "100x100" %></th>
            <th><%= link_to public_customer_path(recipe.customer.id) do %>
                  <%= recipe.customer.name %>
                <% end %>
            </th>
            <th><%= recipe.name %></th>
            <th><%= recipe.genre.category %></th>
            <th>♥<%= recipe.favorites.count %> いいね</th>
            <th>
              <button type="button" class="btn btn-outline-dark btn-sm">
                <%= link_to "詳細", public_recipe_path(recipe.id), class: "nav-link" %>
              </button>
            </th>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>

