<div class="container">
  <h1><%= @recipe.name  %></h1>


    <div class="row">
      <div class="col-lg-4">
        <h4>レシピ画像</h4>
        <%= image_tag @recipe.get_image, size: "100x100" %>
      </div>
      <div class="col-lg-8">
        <h4>カテゴリ</h4>
        <%= @recipe.genre.category %>
        <h4>概要</h4>
        <%= @recipe.description %>
      </div>
    </div>

    <div class="row">

      <div class="form-group col-lg-6">
        <h4>材料</h4>
        <%= @recipe.tips %>
      </div>

      <div class="form-group col-lg-6">
        <h4>お酒</h4>
         <%= @recipe.drink %>
        <h4>お酒説明</h4>
        <%= @recipe.drink_point %>
      </div>

    </div>

    <div class="row">
      <div class="form-group col-lg-12">
        <h4>作り方</h4>
        <%= @recipe.point %>
      </div>
    </div>


</div>